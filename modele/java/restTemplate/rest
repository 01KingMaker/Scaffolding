import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import com.openclassrooms.api.model.Employee;
import com.openclassrooms.api.service.EmployeeService;

@RestController("/[ControllerName]")
public class [ControllerName]Controller {
    
    @Autowired
    private [ControllerName]Service service;
    
    @GetMapping("/")
    public Iterable<[ControllerName]> get[ControllerName]() {
       return service.get[ControllerName]();
    }
    @GetMapping("/{id}")
    public Iterable<[ControllerName]> get[ControllerName](@PathVariable Long id) {
       return service.get[ControllerName](id);
